generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model entradas {
  id            Int       @id @default(autoincrement())
  id_empleado   Int
  hora_entrada  DateTime    
  fecha_entrada DateTime
}

model salidas {
  id            Int       @id @default(autoincrement())
  id_empleado   Int
  hora_salida   DateTime    
  fecha_salida  DateTime
}

model ParametrosJornada {
  id                      Int      @id @default(autoincrement())
  hora_entrada_esperada   String   @default("08:00:00")
  hora_salida_esperada    String   @default("17:00:00")
  tolerancia_minutos      Int      @default(10)
  horas_laborales         Float    @default(8)
  tiempo_minimo_almuerzo  Int      @default(30)
  activo                  Boolean  @default(true)
  fecha_creacion          DateTime @default(now())
  fecha_actualizacion     DateTime @updatedAt
}
