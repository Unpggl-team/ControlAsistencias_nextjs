generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model entradas {
  id            Int       @id @default(autoincrement())
  id_empleado   Int
  hora_entrada  DateTime    
  fecha_entrada DateTime
}

model salidas {
  id            Int       @id @default(autoincrement())
  id_empleado   Int
  hora_salida   DateTime    
  fecha_salida  DateTime
}

model Estadisticas {
  id                Int      @id @default(autoincrement())
  id_empleado      Int
  fecha            String
  llegadas_tarde   Int      @default(0)
  minutos_tarde    Float    @default(0)
  salidas_temprano Int      @default(0)
  minutos_temprano Float    @default(0)
  horas_trabajadas Float    @default(0)
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  @@unique([id_empleado, fecha])
  @@map("estadisticas")
}

model ParametrosJornada {
  id                    Int      @id @default(autoincrement())
  hora_entrada_esperada String
  hora_salida_esperada  String
  tolerancia_minutos    Int
  horas_laborales      Float    @default(8)
  activo               Boolean  @default(true)
  fecha_creacion       DateTime @default(now())
}
